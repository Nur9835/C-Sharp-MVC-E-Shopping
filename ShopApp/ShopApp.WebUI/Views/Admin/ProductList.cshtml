@model ProductListModel
@{
    ViewData["Title"] = "Index";

}

<h1>Admin Product List </h1>
<hr/>

@if(Model.Products.Count()>0)
            {
<table class="table table-bordered">
    <thead>
        <tr>
            <td style="width:30px;">Id</td>
            <td style="width:100px;">Image</td>
            <td >Name</td>
            <td style="width:150px;" >Price</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <img src="~/img/@item.ImageUrl" width="80" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Edit </a>


               <form action="/admin/deleteproduct" method="post" style="display:inline">
                   <input type="hidden" name="productId" value="@item.Id"/>
                   <button type="submit" class="btn alert-danger btn-sm"> Delete </button> 
               </form>
                </td>

            </tr>
        }


    </tbody>
</table>
            }




            else
            {
    <div class="alert alert-warning">
        <h4> No Products </h4>
    </div>
            }




